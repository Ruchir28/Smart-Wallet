{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"],
      "@db/*": ["../db/src/*"],
      "@prisma/client": ["../db/node_modules/.prisma/client"]
    }
  },
  "references": [
    {
      "path": "../db"
    }
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
